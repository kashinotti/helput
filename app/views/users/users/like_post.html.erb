<div class="user-like-posts">
  <%= render partial: 'users/users/user', locals: { user: @user, post: @post, isRoom: @isRoom, roomId: @roomId, room: @room, userRoom: @userRoom } %>
  
  <div class="user-like-posts__index">
    <h1>
      <i class="fas fa-heart"></i>
      いいねした投稿
    </h1>
    
    <div class="user-like-posts__index--article">
      <div class="like-posts">
        <% @likes.each do |like| %>
          <!--投稿ごとのいいねの数を表示させるためにidにキー(like.post_id)を入れ変数postに代入-->
          <% post = Post.find_by(id: like.post_id) %>
          <article>
            
            <div class="like-posts__user">
              <p>
                <%= link_to like.user.name, user_path(like.user.id) %>
              </p>
            </div>
            
            <div class="like-post-title">
              <p>
                <%= attachment_image_tag like.user, :profile_image, :fill, 40, 40, format: 'jpg', class: "img-circle profile-img", fallback: "no_image.jpg", size: "40x40" %>
                <%= link_to like.post.title, post_path(like.user.id) %>
              </p>
            </div>
            
            <div class="like-posts__post-info">
              <i class="fas fa-heart"></i><%= post.likes.count %>
              |
              作成日:<%= like.created_at.strftime('%Y/%m/%d') %>
            </div>
          </article>
        <% end %>
        
        <div class="like-posts__paginate">
          <%= paginate @likes %>
        </div>
        
      </div>
    </div>
  </div>
</div>