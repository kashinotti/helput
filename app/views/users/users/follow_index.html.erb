<div class="user-follow">

  <%= render partial: 'users/users/user', locals: { user: @user, post: @post, isRoom: @isRoom, roomId: @roomId, room: @room, userRoom: @userRoom } %>
  
  <div class="user-follow__my-follow">
    
    <div class="user-follow__my-follow--heading">
      <h1>
        <i class="fas fa-users"></i>
        フォロー中のユーザー
      </h1>
    </div>
    
    <div class="user-follow__my-follow--index">
      <div class="follow-user-info">
        <% if @followings.count >= 1 %>
        <% @followings.each do |following| %>
        
          <div class="follow-user-info__user-name">
            <p>
              <%= attachment_image_tag following, :profile_image, :fill, 40, 40, format: 'jpg', class: "img-circle profile-img", fallback: "no_image.jpg", size: "40x40" %>
              <%= link_to following.name, user_path(following.id) %>
            </p>
          </div>
        <% end %>
        <% else %>
          <h4>
            フォローしているユーザーはいません。
          </h4>
        <% end %>
      </div>
    </div>
    
    <div class="follow-user-info__paginate">
      <%= paginate @followings %>
    </div>
    
  </div>
</div>