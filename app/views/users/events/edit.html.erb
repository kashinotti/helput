<div class="event-edit">
  <div class="event-edit__heading">
    <h1>
      <i class="far fa-calendar-alt"></i>
      予定の追加
    </h1>
  </div>

  <div class="event-edit__event-edit-form">
    <%= form_with model: @event, url: event_path(@event.id), method: :patch, local: true do |f| %>
      <%= render partial: 'layouts/error_messages', locals: { model: f.object } %>
      <div class="event-edit-field">
        <div class="event-edit-field__label">
          <%= f.label :title, '予定のタイトル' %>
        </div>
        <%= f.text_field :title %>
      </div>

    <div class="event-edit-field">
      <div class="event-edit-field__label">
        <%= f.label :content, '予定の詳細' %>
      </div>
      <%= f.text_area :content, class: "event-edit__event-edit-form--form-area" %>
    </div>

    <div class="event-edit-field">
      <div class="event-edit-field__label">
        <%= f.label :start_date, '開始時間' %>
      </div>
      <%= f.datetime_select :start_date, {use_month_numbers: true, start_year: Date.today.year} %>
    </div>

    <div class="event-edit-field">
      <div class="event-edit-field__label">
        <%= f.label :end_date, '終了時間' %>
      </div>
      <%= f.datetime_select :end_date, {use_month_numbers: true, start_year: Date.today.year} %>
    </div>

    <div class="event-edit__event-edit-form--submit">
      <%= f.submit '変更を保存', class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
  </div>
</div>

