<div>
  <h1>予定詳細</h1>
  <br>
  <table>
    <tbody>
      <tr>
        <th>
          予定のタイトル
        </th>
        <td>
          <%= @event.title %>
        </td>
      </tr>
      
      <tr>
        <th>
          予定の詳細
        </th>
        <td>
          <%= @event.content %>
        </td>
      </tr>
      
      <tr>
        <th>
          開始時間
        </th>
        <td>
          <%= @event.start_date.to_s(:datetime_jp) %>
        </td>
      </tr>
      
      <tr>
        <th>
          終了時間
        </th>
        <td>
          <%= @event.end_date.to_s(:datetime_jp) %>
        </td>
      </tr>
    </tbody>
  </table>
  
  <div>
    <%= link_to "予定を編集する", edit_user_path(@event.id) %>
    |
    <%= link_to "予定の削除", event_path(@event.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
  </div>
</div>
