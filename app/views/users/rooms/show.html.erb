<!--<h4><%#= @useRoom.user.name %></h4>-->

<% @userRooms.each do |userRoom| %>
  <div>
    <%#= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpg', class: "img-circle profile-img", fallback: "no_image.jpg", size: "50x50" %>
    <%= link_to userRoom.user.name, user_path(userRoom.user.id) %>
  </div>
<% end %>

<div class="messages">
  <% if @chats.present? %>
    <% @chats.each do |chat| %>
      <div>
        <%#= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpg', class: "img-circle profile-img", fallback: "no_image.jpg", size: "50x50" %>
      </div>
      <div>
        <%= chat.user.name %>
        <%= chat.message %>
        <%= chat.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
    <% end %>
  <% end %>
</div>


<div>
  <%= form_with model: @chat, url: "#{chats_path}.json", method: :post, id: "new-message", local: true do |f| %>
    <%= f.text_area :message, class: "form_message" %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div>
      <p><%= f.submit "送信", class: "form_submit" %></p>
    </div>
  <% end %>
</div>