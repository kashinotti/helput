<h1>投稿編集画面</h1>

<%= form_with model: @post, url: post_path(@post.id), method: :patch, local: true do |f| %>
    
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>

    <%= f.label :content, "本文" %>
    <%= f.text_area :content, id: 'edit_content_form' %>

    <%= f.submit %>
  <% end %>
  
  <%= link_to "投稿を削除する", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  
  
  
  <script>
  new FroalaEditor('#edit_content_form',{
    language: 'ja',
    imageUploadURL: '/upload_image',
    imageUploadParams: {
      id: 'my_editor'
    },
    emoticonsUseImage: false
  });
</script>