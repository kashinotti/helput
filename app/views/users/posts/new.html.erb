<div class="post-new">
  
  <h1>記事の新規投稿</h1>
  
  <div class="post-new__new-form">
  <%= form_with model: @post, url: posts_path, method: :post, local: true do |f| %>

    <div class="new-field">
      <div class="new-field__label">
        <%= f.label :title, "タイトル" %>
      </div>
      <%= f.text_field :title %>
    </div>

    <div class="new-field">
      <div class="new-field__label">
        <%= f.label :content, "本文" %>
      </div>
      <%= f.text_area :content, id: 'new_content_form' %>
    </div>

    <div class="new-field__submit">
      <%= f.submit '投稿', class: "new-filed__btn btn btn-primary btn-lg" %>
    </div>

  <% end %>
  </div>
</div>


<script>
  new FroalaEditor('#new_content_form',{
    language: 'ja',
    imageUploadURL: '/upload_image',
    imageUploadParams: {
      id: 'my_editor'
    },
    emoticonsUseImage: false
  });
</script>