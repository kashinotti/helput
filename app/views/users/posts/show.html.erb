          <%#= f.submit "返信する" %>
        <%# end %>
      </div>

    <% end %>
  </div>
</div>


<div>
  <%= form_with(model:[@post, @comment], url: post_comments_path(@post.id), method: :post, local: true) do |f| %>

    <%= f.hidden_field :post_id, value: @post.id %>

    <%= f.text_area :comment %>

    <%= f.submit "投稿する" %>

  <% end %>
</div>
