<div class="ad-user-follow">

  <%= render partial: 'admins/users/user', locals: { user: @user } %>

  <div class="ad-user-follow__user-follow">

    <div class="ad-user-follow__user-follow--heading">
      <h1>
        <i class="fas fa-users"></i>
        <%= @user.name %>がフォロー中のユーザー
      </h1>
    </div>

    <div class="ad-user-follow__user-follow--index">
      <div class="ad-follow-user-info">
        <% @followings.each do |following| %>

          <div class="ad-follow-user-info__user-name">
            <p>
              <%= attachment_image_tag following, :profile_image, :fill, 40, 40, format: 'jpg', class: "img-circle profile-img", fallback: "no_image.jpg", size: "40x40" %>
              <%= link_to following.name, admins_user_path(following.id) %>
              <% if following.is_deleted == true %>
                (退会済みユーザー)
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="ad-follow-user-info__paginate">
      <%= paginate @followings %>
    </div>

  </div>
</div>